<?xml version="1.0" encoding ="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<!-- 定义一个bean spring 默认singleton="true" -->
	<bean id="HelloWorld" class="com.gc.action.HelloWorld">
<!-- 	<bean id="HelloWorld" class="com.gc.action.ChHello" singleton="true"> -->
		<!-- 将其变量msg通过依赖注入 -->
		<property name="msg">
		<null/>
<!-- 			<value>hello !!!</value> -->
<!-- 			<value>null</value> -->
		</property>
		
		<!-- 变量date通过依赖注入来完成 -->
		<property name="date">
<!-- 		<ref bean="date"/> -->
		<bean id="date" class="java.util.Date"/>
		</property>
		
		<!--list 的依赖注入  -->
		<property name="alist">
		<list>
		<value>gf</value>
		<value>gd</value>
		<value>hello list</value>
		</list>
		</property>
		
		<!--set 的依赖注入  -->
		<property name="aset">
		<set>
		<value>gf</value>
		<value>gd</value>
		<value>hello set</value>
		</set>
		</property>
		
		<!--map 的依赖注入  -->
		<property name="amap">
		<map>
		<entry key="gf">
		<value>hello map 1</value>
		</entry>
		<entry key="gd">
		<value>hello map 2</value>
		</entry>
		</map>
		</property>
		
		<!--Properties 的依赖注入  -->
		<property name="proper">
		<props>
		<prop key="gf">gff</prop>
		<prop key="gd">gdd</prop>
		</props>
		</property>
		
	</bean>
<!-- 	<bean id="date" class="java.util.Date" /> -->

	<!-- 定义一个bean,通过构造函数注入 -->
	<bean id="HelloWorld1" class="com.constructorinjection.action.HelloWorld">
		<!-- 通过构造函数进行注入 -->
		<constructor-arg index="0">
			<value>Hello lcy</value>
		</constructor-arg>
	</bean>

</beans>